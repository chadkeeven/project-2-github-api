<% include ./partials/header.ejs %>
<div class="content-main text-center">
	<p>Hello <%= currentUser %></p>
	<div class="row text-center">
		<a class="btn btn-default" href="/search">Search</a>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h2 class="text-center">Saved Candidates</h2>
		</div>
		<!-- Canidates -->
		<div id='candidateResults'>
			<ul class='list-group col-md-4 col-md-offset-4' > 
				<% savedCandidates.forEach(function(candidate,index){ %> 
					<li class='list-group-item'> 
					<a href = '/user/candidate/<%= candidate.id %>'>
					<%= candidate.username %>
					<%= candidate.lable %>
					</a>
					</li>
					<% }) %>
				</ul>

				</div>
				</div>
				</div>
				<% include ./partials/footer.ejs %>